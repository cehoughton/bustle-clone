<li>{{article.title}}<br>

{{article.content}}

  {{#if isImageShowing}}
   <p><img src={{article.image}} alt={{article.title}} {{action 'imageHide'}}></p>
  {{else}}
    <button {{action 'imageShow'}}>Show image</button>
  {{/if}}
  {{update-article article=article update="update"}}
    <button {{ action 'delete' article}}>Delete</button>
  <hr>
</li>
